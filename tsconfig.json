{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Fixes TS1259 for 'cors'
    "skipLibCheck": true, // Bypasses 'undici-types', 'csstype' errors
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["server.ts", "api/**/*.ts"],
  "exclude": ["node_modules", "src"]
}